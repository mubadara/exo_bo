<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Edit an article</title>
  </head>
  <body>
        <h1 class="text-center p-5">Modifier un article</h1>
        <div class="container-fluid mt-0">
            <div class="container">
                <div class="row m-auto">
                    <div class="col-sm mb-5 rounded text-dark">
                        <form method="post" class="font-weight-bold">
                            <div class="form-group">
                                <label for="exampleInput1">Id</label>
                                <input name="id" type="text" class="form-control" aria-describedby="emailHelp" value="{{ article.id }}" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInput1">Nom</label>
                                <input name="name" type="text" class="form-control" aria-describedby="emailHelp" value="{{ article.name }}">
                                {% if errors.name is defined %}
                                <div class="invalid-feedback">
                                    {{ messages.name }}
                                </div>
                                {% endif %}
                            </div>
                            <div class="form-group ">
                                <label for="exampleInputSubject1">Description</label>
                                <input name="description" rows="3" type="text" class="form-control"value="{{ article.description }}">
                                {% if errors.description is defined %}
                                <div class="invalid-feedback">
                                    {{ messages.description }}
                                </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label for="exampleInput1">Prix</label>
                                <input name="price" type="text" class="form-control"  value="{{ article.price }}">
                                {% if errors.price is defined %}
                                <div class="invalid-feedback">
                                    {{ messages.price }}
                                </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label for="exampleInput1">Quantit√©</label>
                                <input name="quantity" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ article.quantity }}">
                                {% if errors.quantity is defined %}
                                <div class="invalid-feedback">
                                    {{ messages.quantity }}
                                </div>
                                {% endif %}
                            </div>
                            <button type="submit">Modifier</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
  </body>
</html>